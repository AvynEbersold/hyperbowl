<%- include('partials/metadata'); -%> <%- include('partials/header') -%> <% if(authorized){ %> <%- include('partials/sidebar') -%> <% } %>

<div class="default-header">
	<div class="default-header-text-div">
		<h1 class="default-header-text">My Drafts</h1>
	</div>
</div>
<div class="row dark-primary-txt">
	<% if(drafts.length) { %> <% for(let i = 0; i < drafts.length; i++){ %>
	<div class="col-lg-3 col-md-6" id="<%= drafts[i].id %>">
		<div class="card post-thumbnail margin-top">
			<a href="/drafts/<%= drafts[i].id %>" class="article-link-button">
				<div class="card-img-container">
					<% if(!drafts[i].image){ %>
					<img src="https://picsum.photos/800/" class="card-img-top" alt="Cover photo" onError="this.src = 'https://picsum.photos/800/'" />
					<% } else { %>
					<img src="<%= drafts[i].image %>" class="card-img-top" alt="Cover photo" onError="this.src = 'https://picsum.photos/800/'" />
					<% } %>
				</div>
			</a>
			<div class="card-body">
				<h5 class="card-title"><%= drafts[i].title %></h5>
				<span id="postPreview<%= i %>" style="display: none;"><%- drafts[i].content %></span>
				<script type="text/javascript">
					var content = document.getElementById('postPreview<%= i %>');
					var textContent = content.textContent;
					var preview = textContent.substring(0, 120);
					content.style.display = 'inline';
					content.innerHTML = preview + '...';
				</script>
				<a href="/drafts/<%= drafts[i].id %>" class="btn article-link-button margin-top">View/Edit Draft</a>
				<i data-id="<%= drafts[i].id %>" class="full-width btn delete-draft icon-option fas fa-trash-alt"></i>
			</div>
		</div>
	</div>
	<% } %> <% } else { %>
	<div class="section-header centered">
		<h2>You don't have any drafts. How about you <a href="/create">create one?</a></h2>
	</div>
	<% } %>
</div>
<%- include('partials/footer') -%>
